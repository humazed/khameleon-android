<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--suppress AndroidUnknownAttribute -->
    <data class=".CalendarFragmentBinding">

        <variable
            name="viewModel"
            type="com.pandulapeter.khameleon.feature.home.calendar.CalendarViewModel" />

    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <com.applandeo.materialcalendarview.CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:abbreviationsLabelsColor="@color/primary"
                app:forwardButtonSrc="@drawable/ic_navigate_next_24dp"
                app:headerColor="@color/white"
                app:headerLabelColor="@color/primary"
                app:previousButtonSrc="@drawable/ic_navigate_previous_24dp"
                app:todayLabelColor="@color/accent" />

        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>

</layout>