<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Authentication">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="GiphyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppBarTheme" parent="Theme.AppCompat">
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="CalendarDay" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="CalendarDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/date</item>
    </style>

    <style name="CalendarToday" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/accent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>